<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<h2>Sign up</h2>

<h3>*全て必須項目です</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, class:"input-default",id:"nickname", placeholder:"例) climbing太郎", maxlength:"40" %>⚠半角アルファベット（大文字・小文字・数値）<br />
    <%= f.text_area :nickname %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label>ジムでのボルダリングの最高グレード</label><br />
    <%= f.collection_select(:boulder_gym_grade_id, BoulderGrade.all, :id, :name, {}, {class:"select-box", id:"grade-category"})%>
  </div>

  <div class="field">
    <label>ジムでのリードの最高グレード</label><br />
    <%= f.collection_select(:lead_gym_grade_id, LeadGrade.all, :id, :name, {}, {class:"select-box", id:"grade-category"})%>
  </div>

  <div class="field">
    <label>岩場のボルダリングの最高グレード</label><br />
    <%= f.collection_select(:boulder_rock_grade_id, BoulderGrade.all, :id, :name, {}, {class:"select-box", id:"grade-category"})%>
  </div>

  <div class="field">
    <label>岩場でのリードの最高グレード</label><br />
    <%= f.collection_select(:lead_rock_grade_id, LeadGrade.all, :id, :name, {}, {class:"select-box", id:"grade-category"})%>
  </div>

  <div class="field">
    <label>性別</label><br />
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"grade-category"})%>
  </div>

  <div class="field">
    <label>お住いの地域</label><br />
    <%= f.collection_select(:region_id,Region.all, :id, :name, {}, {class:"select-box", id:"grade-category"})%>
  </div>

  <div class="field">
    <label>年齢</label><br />
    <%= f.collection_select(:age_id,Age.all, :id, :name,{}, {class:"select-box", id:"grade-category"})%>
  </div>
  <br />

    

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<% end %>